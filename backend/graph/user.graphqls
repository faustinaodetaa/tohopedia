# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type User {
  id: ID!
  email: String!
  password: String!
  username: String!
  name: String!
  role: String!
}

type Query {
  user(id:ID!): User!
  users: [User!]!
}

type Mutation {
  createUser(input: NewUser!): User!
  updateUser(id: ID!, input: NewUser!): User!
}

input NewUser{
  email: String!
  password: String!
  username: String!
  name: String!
  role: String!
}
